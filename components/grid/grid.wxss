.oLa-grids {
    position: relative;
    overflow: hidden;
}

.oLa-grids:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #bfbfbf;
    color: #bfbfbf;
    -webkit-transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
}

.oLa-grids:after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-left: 1px solid #bfbfbf;
    color: #bfbfbf;
    -webkit-transform-origin: 0 0;
    -webkit-transform: scaleX(0.5);
}

.oLa-grid {
    position: relative;
    float: left;
    padding: 20px 10px;
    box-sizing: border-box;
}

.oLa-grid--2 {
    width: 50%;
}

.oLa-grid--3 {
    width: 33.33333333%;
}

.oLa-grid--4 {
    width: 25%;
}

.oLa-grid--5 {
    width: 20%;
}

.oLa-grid:before {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-right: 1px solid #bfbfbf;
    color: #bfbfbf;
    -webkit-transform-origin: 100% 0;
    -webkit-transform: scaleX(0.5);
}

.oLa-grid:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #bfbfbf;
    color: #bfbfbf;
    -webkit-transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
}

.oLa-grid--icon {
    margin: 0 auto;
}

.oLa-grid--2 .oLa-grid--icon {
    width: 40px;
    height: 40px;
}

.oLa-grid--3 .oLa-grid--icon {
    width: 36px;
    height: 36px;
}

.oLa-grid--4 .oLa-grid--icon {
    width: 32px;
    height: 32px;
}

.oLa-grid--5 .oLa-grid--icon {
    width: 28px;
    height: 28px;
}

.oLa-grid--icon-pic {
    display: block;
    width: 100%;
    height: 100%;
}

.oLa-grid--label {
    display: block;
    text-align: center;
    color: #000000;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-top: 8px;
}

.oLa-grid--2 .oLa-grid--label {
    font-size: 18px;
}

.oLa-grid--3 .oLa-grid--label {
    font-size: 16px;
}

.oLa-grid--4 .oLa-grid--label {
    font-size: 14px;
}

.oLa-grid--5 .oLa-grid--label {
    font-size: 12px;
}