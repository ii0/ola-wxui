.oLa-grid-box {
    margin-bottom: -1px;
    margin-right: -1px;
    overflow: hidden;
}

.oLa-grid {
    position: relative;
    float: left;
    box-sizing: border-box;
}

.oLa-grid--2 {
    width: 50%;
    padding: 50rpx 20rpx;
}

.oLa-grid--3 {
    width: 33.33333333%;
    padding: 30rpx 15rpx;
}

.oLa-grid--4 {
    width: 25%;
    padding: 16rpx 10rpx;
}

.oLa-grid--5 {
    width: 20%;
    padding: 12rpx 6rpx;
}

.oLa-grid:before {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-right: 1px solid #bfbfbf;
    color: #bfbfbf;
    -webkit-transform-origin: 100% 0;
    -webkit-transform: scaleX(0.5);
}

.oLa-grid:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #bfbfbf;
    color: #bfbfbf;
    -webkit-transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
}

.oLa-grids--none-border .oLa-grid:after,
.oLa-grids--none-border .oLa-grid:before,
.oLa-grids--none-border:after,
.oLa-grids--none-border:before {
    border: none;
}

.oLa-grid--icon {
    margin: 0 auto;
}

.oLa-grid--2 .oLa-grid--icon {
    width: 80rpx;
    height: 80rpx;
}

.oLa-grid--3 .oLa-grid--icon {
    width: 72rpx;
    height: 72rpx;
}

.oLa-grid--4 .oLa-grid--icon {
    width: 64rpx;
    height: 64rpx;
}

.oLa-grid--5 .oLa-grid--icon {
    width: 56rpx;
    height: 56rpx;
}

.oLa-grid--icon-pic {
    display: block;
    width: 100%;
    height: 100%;
}

.oLa-grid--label {
    display: block;
    text-align: center;
    color: #1f1f1f;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.oLa-grid--2 .oLa-grid--label {
    font-size: 18px;
    margin-top: 25rpx;
}

.oLa-grid--3 .oLa-grid--label {
    font-size: 16px;
    margin-top: 15rpx;
}

.oLa-grid--4 .oLa-grid--label {
    font-size: 14px;
    margin-top: 10rpx;
}

.oLa-grid--5 .oLa-grid--label {
    font-size: 12px;
    margin-top: 6rpx;
}